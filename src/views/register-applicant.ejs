<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Matcher - Signup</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: #e5e5e5;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .container {
            background-color: #e5e5e5;
            width: 100%;
            max-width: 1200px;
            min-height: 700px;
            border: 3px solid #333;
            display: flex;
            flex-direction: column;
            position: relative;
        }

        .header {
            text-align: center;
            padding: 30px;
            background-color: #e5e5e5;
            border-bottom: 3px solid #333;
        }

        .header h1 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }

        .header p {
            font-size: 1rem;
            color: #555;
            margin: 0;
        }

        .signup-form {
            display: flex;
            flex: 1;
        }

        .left-section {
            background-color: #e5e5e5;
            padding: 30px 25px;
            flex: 1;
        }

        .right-section {
            background-color: #e5e5e5;
            padding: 30px 25px;
            border-left: 3px solid #333;
            flex: 1;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            font-size: 1.1rem;
            color: #333;
            margin-bottom: 8px;
            font-weight: 500;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 12px;
            border: none;
            background-color: #ccc;
            font-size: 1rem;
            color: #333;
            border-radius: 0;
            font-family: inherit;
        }

        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: 2px solid #666;
            background-color: #d5d5d5;
        }

        .form-group textarea {
            resize: vertical;
            min-height: 60px;
            font-family: inherit;
        }

        .long-question {
            margin-bottom: 25px;
        }

        .long-question label {
            font-size: 1rem;
            line-height: 1.4;
            margin-bottom: 10px;
        }

        .submit-btn {
            background-color: #666;
            color: white;
            border: none;
            padding: 15px 30px;
            font-size: 1.1rem;
            font-weight: 500;
            cursor: pointer;
            border-radius: 0;
            transition: all 0.3s ease;
            margin-top: 20px;
            width: 100%;
        }

        .submit-btn:hover {
            background-color: #555;
            transform: translateY(-2px);
        }

        .submit-btn:active {
            transform: translateY(0);
        }

        @media (max-width: 768px) {
            .signup-form {
                flex-direction: column;
            }

            .right-section {
                border-left: none;
                border-top: 3px solid #333;
            }

            .header h1 {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Signup</h1>
            <p>We need some information about you to start!</p>
        </div>

        <div class="signup-form">
            <div class="left-section">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required>
                </div>

                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                </div>

                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>
                </div>

                <div class="form-group">
                    <label for="phone">Phone:</label>
                    <input type="tel" id="phone" name="phone" required>
                </div>

                <div class="form-group">
                    <label for="country">Country</label>
                    <select id="country" name="country" required>
                        <option value="">Select your country</option>
                        <option value="us">United States</option>
                        <option value="ca">Canada</option>
                        <option value="uk">United Kingdom</option>
                        <option value="au">Australia</option>
                        <option value="de">Germany</option>
                        <option value="fr">France</option>
                        <option value="other">Other</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="education">Education Level</label>
                    <select id="education" name="education" required>
                        <option value="">Select education level</option>
                        <option value="high-school">High School</option>
                        <option value="associates">Associate's Degree</option>
                        <option value="bachelors">Bachelor's Degree</option>
                        <option value="masters">Master's Degree</option>
                        <option value="phd">PhD</option>
                        <option value="other">Other</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="field">Field</label>
                    <input type="text" id="field" name="field" placeholder="e.g., Software Engineering, Marketing" required>
                </div>

                <div class="form-group">
                    <label for="gpa">GPA</label>
                    <input type="text" id="gpa" name="gpa" placeholder="e.g., 3.5" required>
                </div>

                <div class="form-group">
                    <label for="resume">Resume</label>
                    <input type="file" id="resume" name="resume" accept=".pdf" required>
                </div>

                <div class="form-group">
                    <label for="github">Github</label>
                    <input type="url" id="github" name="github" placeholder="https://github.com/yourusername" required>
                </div>

                <div class="form-group">
                    <label for="linkedin">Linkedin</label>
                    <input type="url" id="linkedin" name="linkedin" placeholder="https://linkedin.com/in/yourprofile" required>
                </div>
            </div>

            <div class="right-section">
                <div class="form-group long-question">
                    <label for="motivation">Describe your motivation in 3 words</label>
                    <input type="text" id="motivation" name="motivation" maxlength="50" required>
                </div>

                <div class="form-group long-question">
                    <label for="work-ethic">Describe your work ethic in 3 words</label>
                    <input type="text" id="work-ethic" name="work-ethic" maxlength="50" required>
                </div>

                <div class="form-group long-question">
                    <label for="life-goals">End of life goals</label>
                    <textarea id="life-goals" name="life-goals" rows="3" required></textarea>
                </div>

                <div class="form-group long-question">
                    <label for="lessons">In 30 words, tell me 3, unique lessons you've learned building software</label>
                    <textarea id="lessons" name="lessons" rows="4" maxlength="200" required></textarea>
                </div>

                <div class="form-group long-question">
                    <label for="experience">Favourite experience in general</label>
                    <textarea id="experience" name="experience" rows="3" required></textarea>
                </div>

                <button type="submit" class="submit-btn">Sign Up</button>
            </div>
        </div>
    </div>

    <script>

document.querySelector('.submit-btn').addEventListener('click', async function(e) {
    e.preventDefault();

    const formData = new FormData();

    // Add text fields
    const fields = ['name', 'email', 'password', 'phone', 'country', 'education', 'field', 'gpa', 'github', 'linkedin', 'motivation', 'work-ethic', 'life-goals', 'lessons', 'experience'];
    for (const field of fields) {
        const input = document.getElementById(field);
        if (input && input.value.trim()) {
            formData.append(field, input.value.trim());
        }
    }

    // Add resume file
    const resumeInput = document.getElementById('resume');
    if (resumeInput && resumeInput.files.length > 0) {
        formData.append('resume', resumeInput.files[0]);
    } else {
        alert('Resume required!');
        return;
    }

    // Optional: add role
    formData.append('role', 'applicant');

    try {
        const response = await fetch('/signup', {
            method: 'POST',
            body: formData // Do NOT set Content-Type
        });

        const data = await response.json();
        console.log(data);
    } catch (err) {
        console.error('Error submitting form:', err);
    }
});

        
    </script>
</body>
</html>
